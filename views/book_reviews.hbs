<div class="row mb-5">
    <div class="col">
        <a href="/{{searchChar}}/{{pageNum}}/{{bookid}}">< Go Back</a>
    </div>
</div>
{{#each reviews}}
<div class="row border-bottom mb-4">
    <div class="col">
        <div class="row">
            <div class="col">
                <h3>{{this.book_title}}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col">
                By <i>{{this.book_author}}</i>
            </div>
        </div>
        <div class="row">
            <div class="col">
                Reviewer: <i>{{this.byline}}</i>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                Date: <i>{{this.publication_dt}}</i>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{this.summary}}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <div class="d-flex flex-row-reverse">
                    <a href="{{this.url}}" target="__blank">Full Review</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-center">
                    <span style="font-size: 11px;"><i>{{../copyrightString}}</i></span>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="row mt-3">
    <div class="col">
        <div class="d-flex justify-content-center">
            <h3>Sorry no reviews were found for this book.</h3>
        </div>
    </div>
</div>
{{/each}}